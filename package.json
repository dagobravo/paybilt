{
  "name": "payper-html",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "dev": "live-server .",
    "node-sass": "node-sass ./assets/sass/main.scss ./assets/css/style.css -w --output-style compressed",
    "dev:sass": "npm-run-all --parallel node-sass dev",
    "surge": "surge --project ./ --domain paybilt.surge.sh",
    "surgerm": "surge teardown paybilt.surge.sh",
    "firebase": "firebase deploy",
    "commit": "git add * && git commit -m \"Latest changes\" && git push",
    "update": "npm run commit && npm run firebase"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
